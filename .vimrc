" Show tabs as 4 spaces
set tabstop=4
" Indent 4 spaces automatically
set shiftwidth=4
" Enable mouse
set mouse=a
" Set the default terminal
set term=xterm
" Show status bat at the bottom
set laststatus=2
" Disable error bells
set noerrorbells
" Highlight syntax
syntax on
" Show line numbers
set number
" Highlight the current line
set cursorline
" Use 24 bit colours
set termguicolors
" Load colour scheme
colorscheme main
" Indent based on file type
filetype indent on
" Highlight matching brackets
set showmatch

" Search
" Highlight search results
set hlsearch
" Update search with new typed characters
set incsearch
" Case-insensitive search
set ignorecase
